<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Web Bán Hàng - @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    @RenderSection("Styles", required: false)
    <style>
        body {
            min-height: 100vh;
            margin: 0;
            padding-bottom: 150px;
            position: relative;
        }

        header {
            background-color: #007bff; /* Màu nền xanh dương nổi bật */
            color: white; /* Chữ trắng để tương phản */
            padding: 20px 0; /* Padding trên dưới */
            text-align: center; /* Căn giữa nội dung */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Thêm bóng để nổi bật */
        }

            header h1 {
                font-size: 2.5rem; /* Tăng kích thước chữ */
                font-weight: bold; /* Chữ đậm */
                margin: 0; /* Bỏ margin mặc định */
            }

        footer {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background-color: #f8f9fa;
            z-index: 1000;
        }
    </style>
</head>
<body>
    <header>
        <h1>Trang Web Bán Hàng</h1>
    </header>

    <nav class="navbar navbar-expand-md">
        <div class="container-fluid">
            <a class="navbar-brand d-md-none" asp-controller="Product" asp-action="Index">Trang Chủ</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item d-none d-md-block">
                        <a class="nav-link" asp-controller="Product" asp-action="Index">Trang Chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Product" asp-action="Index">Sản Phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Liên Hệ</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    <footer class="bg-light py-4">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-md-4 col-sm-12 mb-3">
                    <h5 class="text-primary"><i class="bi bi-geo-alt-fill me-2"></i>Địa Chỉ</h5>
                    <p class="text-muted">123 Đường Số 1, Quận 1, TP. HCM</p>
                </div>
                <div class="col-md-4 col-sm-12 mb-3">
                    <h5 class="text-primary"><i class="bi bi-envelope-fill me-2"></i>Email</h5>
                    <p class="text-muted">support@websitebanhang.com</p>
                </div>
                <div class="col-md-4 col-sm-12 mb-3">
                    <h5 class="text-primary"><i class="bi bi-telephone-fill me-2"></i>Hotline</h5>
                    <p class="text-muted">0123 456 789</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>